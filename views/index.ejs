<%- include('header.ejs') -%>
<div class="box" id="heading">
    <h1><%= date %></h1>
</div>
<div class="box" id="heading"><h2><%= type %></h2></div>
<div class="box">

    <% for(var i = 0;i < toDos.length;i++){ %>
        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="checkbox" value=<%= toDos[i]._id %> onchange="this.form.submit()">
                <p><%= toDos[i].item %></p>
            </div>
            <input type="hidden" name="listName" value=<%= type %>>
        </form>
    <% } %>

    <form class="item" action="/" method="post">
        <input name="newTask" type="text" placeholder="New task" autocomplete="off">
        <button type="submit" name="button" value=
                <%= type %>
        >+
        </button>
    </form>
</div>
<%- include('footer.ejs') -%>